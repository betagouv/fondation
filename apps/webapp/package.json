{
  "name": "webapp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build:deps": "concurrently \"pnpm --filter @/shared-models build:esm\" \"pnpm dsfr:build\"",
    "build:deps:watch": "pnpm --filter @/shared-models build:esm:watch",
    "prebuild": "pnpm build:deps",
    "build": "vite build",
    "predev": "pnpm build:deps",
    "dev": "concurrently \"pnpm build:deps:watch\" \"vite\"",
    "lint:check": "eslint .",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "types:check": "tsc --noEmit -p ./tsconfig.app.json",
    "types:check:watch": "tsc --noEmit -p ./tsconfig.app.json --watch",
    "preview": "vite preview",
    "test": "vitest",
    "test:all": "vitest run",
    "postinstall": "pnpm dsfr:build",
    "dsfr:build": "react-dsfr update-icons"
  },
  "dependencies": {
    "@/api-sdk": "workspace:*",
    "@/shared-models": "workspace:*",
    "@codegouvfr/react-dsfr": "^1.13.6",
    "@reduxjs/toolkit": "^2.2.7",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.1.2",
    "type-route": "^1.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@ryoppippi/unplugin-typia": "^1.0.6",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.13",
    "type-fest": "^4.26.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.1",
    "vitest": "^2.1.1"
  }
}
