{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "types:check": "tsc --noEmit",
    "types:check:watch": "tsc --noEmit --watch",
    "test": "jest",
    "test:watch": "jest -w 1 --watch",
    "test:it": "jest --runInBand --config ./test/jest/jest-integration.config.ts",
    "test:it:watch": "jest --watch --runInBand --config ./test/jest/jest-integration.config.ts",
    "test:mig": "jest --runInBand --config ./test/jest/jest-migration.config.ts",
    "test:mig:watch": "jest --watch --runInBand --config ./test/jest/jest-migration.config.ts",
    "test:e2e": "jest --runInBand --config ./test/jest/jest-e2e.config.ts",
    "test:all": "jest --runInBand --config ./test/jest/jest-all.config.ts && pnpm test:mig",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepare": "ts-patch install && typia patch",
    "gen-sdk": "nestia sdk",
    "drizzle:gen": "drizzle-kit generate --name",
    "drizzle:migrate": "drizzle-kit migrate",
    "drizzle:migrate:prod": "pnpm drizzle-kit migrate --config dist/drizzle.config.js",
    "cli:seed": "ts-node -r tsconfig-paths/register cli/seed.ts",
    "cli:upload-nomination-files:local": "ts-node -r tsconfig-paths/register cli/import-nominations-from-local-file/run-import-nominations-from-local-file-cli.ts",
    "scalingo:upload-nomination-files:staging": "dotenvx run -f .env.scalingo-upload.staging -f .env.scalingo-upload -- ./scripts/import-nominations-from-local-file-to-scalingo.sh",
    "scalingo:upload-nomination-files:production": "dotenvx run -f .env.scalingo-upload.production -f .env.scalingo-upload -- ./scripts/import-nominations-from-local-file-to-scalingo.sh"
  },
  "dependencies": {
    "@nestia/core": "^3.17.0",
    "@nestia/sdk": "^3.17.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/event-emitter": "^2.0.4",
    "@nestjs/platform-express": "^10.0.0",
    "axios": "^1.7.7",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.35.2",
    "form-data": "^4.0.1",
    "lodash": "^4.17.21",
    "pg": "^8.13.0",
    "pg-native": "^3.2.0",
    "postgres": "^3.4.4",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "shared-models": "workspace:*",
    "typia": "^6.11.3"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.20.1",
    "@nestia/benchmark": "^0.2.3",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.13",
    "@types/lodash": "^4.17.13",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.0.1",
    "drizzle-kit": "^0.26.2",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "expect": "^29.7.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "nestia": "^6.2.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "testcontainers": "^10.13.2",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.2.1",
    "tsconfig-paths": "^4.2.0",
    "type-fest": "^4.26.1",
    "typescript": "^5.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "modulePaths": [
      "<rootDir>/../"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(ts)"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/../test/jest/custom-expects.ts"
    ]
  }
}
